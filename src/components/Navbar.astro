---
import Logo from './Logo.astro';

const links = [
  { href: '#products', label: 'Products' },
  { href: '#philosophy', label: 'Philosophy' },
  { href: '#stack', label: 'Stack' },
  { href: '#contact', label: 'Contact' },
];
---

<nav class="nav-bg fixed top-0 left-0 right-0 z-50" aria-label="Main navigation">
  <div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 cursor-pointer" aria-label="BESSL Home">
      <Logo />
      <span class="font-heading text-lg font-bold tracking-tight">BESSL</span>
    </a>

    <!-- Desktop links -->
    <div class="hidden md:flex items-center gap-8">
      {links.map(({ href, label }) => (
        <a
          href={href}
          class="nav-link text-sm font-medium text-zinc-500 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors cursor-pointer"
        >
          {label}
        </a>
      ))}

      <!-- Theme toggle -->
      <button
        id="theme-toggle"
        class="p-2 rounded-lg hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-colors cursor-pointer"
        aria-label="Toggle theme"
      >
        <svg class="icon-sun hidden w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
          <circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
        </svg>
        <svg class="icon-moon w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
          <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"/>
        </svg>
      </button>
    </div>

    <!-- Mobile menu button -->
    <button
      id="menu-btn"
      class="md:hidden p-2 rounded-lg hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-colors cursor-pointer"
      aria-label="Open menu"
      aria-expanded="false"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
        <line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="18" x2="21" y2="18"/>
      </svg>
    </button>
  </div>
</nav>
