---
import Logo from './Logo.astro';

const currentYear = new Date().getFullYear();
const sections = [
  {
    title: 'Navigate',
    links: [
      { href: '#products', label: 'Products' },
      { href: '#philosophy', label: 'Philosophy' },
      { href: '#about', label: 'About' },
    ],
  },
  {
    title: 'Products',
    links: [
      { href: 'https://claudel.app', label: 'Claudel' },
      { href: 'https://unask.app', label: 'Unask' },
    ],
  },
];
---

<footer class="footer-bg mt-32" aria-label="Footer navigation">
  <div class="max-w-6xl mx-auto px-6 py-12">
    <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <div class="flex items-center gap-2 mb-4">
          <Logo size="sm" />
          <span class="font-heading font-bold">BESSL</span>
        </div>
        <p class="text-sm text-zinc-600 dark:text-zinc-400 max-w-xs">
          Building Excellence through Software & Smart Living.
        </p>
      </div>

      {sections.map(({ title, links }) => (
        <div>
          <h4 class="font-heading font-semibold text-sm mb-3">{title}</h4>
          <ul class="space-y-2">
            {links.map(({ href, label }) => (
              <li>
                <a
                  href={href}
                  class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 hover:underline transition-colors cursor-pointer"
                  {...(href.startsWith('http') ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
                >
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="mt-12 pt-8 border-t border-zinc-200 dark:border-zinc-800 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-zinc-400 dark:text-zinc-500">
      <p>&copy; {currentYear} BESSL. All rights reserved.</p>
      <p>Built with Astro & Claude</p>
    </div>
  </div>
</footer>
