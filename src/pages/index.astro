---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductCard from '../components/ProductCard.astro';

const liveProducts = [
  {
    name: 'Claudel',
    problem: 'Claude Code runs in a terminal. You can\'t orchestrate multiple agents or see what they\'re doing.',
    solution: 'A desktop GUI that runs dozens of Claude agents in parallel, with Gantt charts and DAG visualization to track every task.',
    status: 'live' as const,
    href: 'https://claudel.app',
    features: ['Parallel agent execution', 'Gantt chart task view', 'DAG dependency graph', 'Real-time streaming logs'],
    icon: '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><rect x="2" y="3" width="20" height="14" rx="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>',
  },
  {
    name: 'Unask',
    problem: 'User interviews take weeks to schedule and cost thousands. Most startups skip validation entirely.',
    solution: 'AI personas that interview like real users. Run a simulated mom-test in minutes, not weeks.',
    status: 'live' as const,
    href: 'https://unask.app',
    features: ['15+ AI persona templates', 'Realistic multi-turn interviews', 'Insight extraction & scoring', 'Export to PRD format'],
    icon: '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 00-3-3.87"/><path d="M16 3.13a4 4 0 010 7.75"/></svg>',
  },
  {
    name: 'LocalPDF',
    problem: 'Online PDF tools upload your files to someone else\'s server.',
    solution: 'Merge, split, and compress PDFs entirely in your browser. Nothing leaves your machine.',
    status: 'live' as const,
    href: 'https://local-pdf-download.netlify.app',
    features: [],
    icon: '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>',
  },
];

const otherProducts = [
  {
    name: 'Tether',
    description: 'Detects when Figma, Notion, GitHub, and Linear drift out of sync — and shows you where.',
    status: 'dev' as const,
    icon: '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M10 13a5 5 0 007.54.54l3-3a5 5 0 00-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 00-7.54-.54l-3 3a5 5 0 007.07 7.07l1.71-1.71"/></svg>',
  },
  {
    name: 'CarQuick',
    description: 'Plug in an OBD2 dongle, get a plain-language diagnosis with repair cost estimates.',
    status: 'planning' as const,
    icon: '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M5 17h2l1-4h8l1 4h2"/><circle cx="7.5" cy="17.5" r="1.5"/><circle cx="16.5" cy="17.5" r="1.5"/><path d="M3 11l2-6h14l2 6"/></svg>',
  },
  {
    name: 'Design Forge',
    description: 'CLI that searches 62 design systems and generates component code for your stack.',
    status: 'dev' as const,
    icon: '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></svg>',
  },
];
---

<BaseLayout
  title="BESSL Framework — AI product development framework"
  description="A framework for building AI-powered products. Claudel, Unask, and more — from Seoul."
>
  <!-- Hero -->
  <section class="relative hero-grid overflow-hidden pt-28 pb-12 md:pt-36 md:pb-16">
    <div class="hero-glow" aria-hidden="true"></div>

    <div class="relative z-10 max-w-3xl mx-auto px-6">
      <h1 class="font-heading text-3xl sm:text-4xl md:text-5xl font-bold tracking-tight mb-5 text-zinc-900 dark:text-zinc-50">
        A framework for building<br/>AI products.
      </h1>

      <p class="text-base md:text-lg text-zinc-600 dark:text-zinc-400 mb-8 max-w-xl">
        BESSL Framework is a one-person system for shipping AI-powered software.
        One framework, multiple products — each solving a real problem that only AI can address.
      </p>

      <div class="flex items-center gap-4">
        <a
          href="#products"
          class="cta-btn inline-flex items-center gap-2 px-5 py-2.5 bg-zinc-900 dark:bg-zinc-100 hover:bg-zinc-800 dark:hover:bg-zinc-200 text-white dark:text-zinc-900 text-sm font-medium rounded-lg cursor-pointer"
        >
          Browse products
        </a>
        <a
          href="#about"
          class="text-sm font-medium text-zinc-500 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors cursor-pointer"
        >
          About the framework
        </a>
      </div>
    </div>
  </section>

  <!-- Products -->
  <section id="products" class="max-w-3xl mx-auto px-6 py-16">
    <h2 class="section-title font-heading text-2xl font-bold mb-10 reveal">Products</h2>

    <!-- Live products — problem → solution cards -->
    <div class="space-y-6 mb-12">
      {liveProducts.map((product, i) => (
        <div class="glass-card p-6 md:p-8 reveal" style={`transition-delay: ${i * 80}ms`}>
          <div class="flex items-center gap-3 mb-4">
            <div class="w-9 h-9 rounded-lg bg-zinc-100 dark:bg-zinc-800 flex items-center justify-center text-zinc-600 dark:text-zinc-300 flex-shrink-0" aria-hidden="true" set:html={product.icon} />
            <h3 class="font-heading text-lg font-bold">{product.name}</h3>
            <span class="text-[11px] font-medium px-2 py-0.5 rounded-full badge-live flex-shrink-0">Live</span>
          </div>

          <p class="text-sm text-zinc-500 dark:text-zinc-400 mb-2">{product.problem}</p>
          <p class="text-sm text-zinc-700 dark:text-zinc-300 leading-relaxed mb-4">{product.solution}</p>

          {product.features.length > 0 && (
            <ul class="grid grid-cols-2 gap-x-4 gap-y-1.5 mb-4">
              {product.features.map((f) => (
                <li class="text-xs text-zinc-600 dark:text-zinc-400 flex items-start gap-1.5">
                  <svg class="w-3.5 h-3.5 text-zinc-400 dark:text-zinc-500 mt-0.5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" aria-hidden="true">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  {f}
                </li>
              ))}
            </ul>
          )}

          <a
            href={product.href}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1.5 text-sm font-medium text-zinc-700 dark:text-zinc-300 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors cursor-pointer"
          >
            {product.href.replace('https://', '').replace(/\/$/, '')}
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" aria-hidden="true">
              <path d="M7 17L17 7"/><path d="M7 7h10v10"/>
            </svg>
          </a>
        </div>
      ))}
    </div>

    <!-- In development / planning -->
    <h3 class="font-heading text-sm font-bold text-zinc-400 dark:text-zinc-500 uppercase tracking-wider mb-4 reveal">In development</h3>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      {otherProducts.map((product, i) => (
        <div class="reveal" style={`transition-delay: ${i * 60}ms`}>
          <ProductCard {...product} />
        </div>
      ))}
    </div>
  </section>

  <!-- Philosophy -->
  <section id="philosophy" class="max-w-3xl mx-auto px-6 py-16">
    <h2 class="section-title font-heading text-2xl font-bold mb-10 reveal">Philosophy</h2>

    <div class="space-y-10 reveal">
      <div>
        <h3 class="font-heading font-bold text-base mb-2 text-zinc-900 dark:text-zinc-100">AI is the architecture, not a feature.</h3>
        <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-xl">
          The framework only produces products where AI is the core, not an add-on.
          Claudel can't exist without agent orchestration. Unask can't exist without AI personas.
          If it could be built without AI, it doesn't belong here.
        </p>
      </div>

      <div>
        <h3 class="font-heading font-bold text-base mb-2 text-zinc-900 dark:text-zinc-100">Shared infrastructure, independent products.</h3>
        <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-xl">
          Every product in the framework shares the same tooling, deployment pipeline, and design system.
          This is what makes it possible to run multiple products with one person — the framework handles the repetitive parts so each product can focus on its unique problem.
        </p>
      </div>

      <div>
        <h3 class="font-heading font-bold text-base mb-2 text-zinc-900 dark:text-zinc-100">Ship fast, learn faster.</h3>
        <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-xl">
          Products go from idea to live in weeks.
          The framework is optimized for speed — launch early, measure what matters, and shut things down if nobody uses them.
        </p>
      </div>
    </div>
  </section>

  <!-- About -->
  <section id="about" class="max-w-3xl mx-auto px-6 py-16">
    <h2 class="section-title font-heading text-2xl font-bold mb-6 reveal">About</h2>

    <div class="reveal">
      <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-xl mb-2">
        BESSL Framework is run by a solo developer based in Seoul, Korea.
        The framework was built in 2025 to systematize how one person can ship multiple AI products simultaneously.
      </p>
      <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-xl mb-6">
        Everything — design, code, deployment — runs through the same pipeline with AI assistance.
        Three products are live, two in development, one in research. Emails are answered within a day.
      </p>

      <div class="flex items-center gap-4">
        <a
          href="mailto:bessl.framework@gmail.com"
          class="cta-btn inline-flex items-center gap-2 px-5 py-2.5 bg-zinc-900 dark:bg-zinc-100 hover:bg-zinc-800 dark:hover:bg-zinc-200 text-white dark:text-zinc-900 text-sm font-medium rounded-lg cursor-pointer"
        >
          bessl.framework@gmail.com
        </a>
        <a
          href="https://github.com/besslframework-stack"
          target="_blank"
          rel="noopener noreferrer"
          class="cta-btn inline-flex items-center gap-2 px-5 py-2.5 border border-zinc-200 dark:border-zinc-700 hover:border-zinc-300 dark:hover:border-zinc-600 text-sm font-medium rounded-lg cursor-pointer"
        >
          GitHub
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
